 <div class="main-container">
  <div class="elements-container">
    <div class="first-container">
      <h2>Wecome to WikiRace</h2>
      <h4>Ready to rumble dummy ?</h4>
    </div>
    <div class="second-container" >
      <% if user_signed_in? %>
        <div class="if-container">
          <%= simple_form_for @game_session do |f| %>
            <%= f.submit "Create a session", class: "btn-orange-blue" %>
          <% end %>
          <br>
          <h3>or</h3>
          <br>
          <%= simple_form_for @round_participation do |f| %>
            <%= f.input :round_id, label: "Enter round-id" %>
            <%= f.submit "Join an existing session", class: "btn-blue-orange" %>
          <% end %>
        </div>
      <% else %>
        <div class="else-container">
          <%= link_to "CREATE A PARTY", new_user_registration_path, class: "btn-blue-orange" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

