<div class="main-container" id="gs-show-main-container">
  <div class="title-container centered-vertically"><h1>Log in</h1></div>
  <div class="content-container centered-vertically">
    <div class="white-container centered-vertically pb-0">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="form-inputs">
           <%= f.input :email,
                       required: false,
                       autofocus: true,
                       input_html: { autocomplete: "email" } %>
           <%= f.input :password,
                        label: false, label: 'Mot de passe',
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      label: false, label: 'Se souvenir de moi?',
                      as: :boolean if devise_mapping.rememberable? %>
         </div>

         <div class="form-actions">
           <%= f.button :submit, "Log in", class:'btn-tim main-red' %>
         </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
