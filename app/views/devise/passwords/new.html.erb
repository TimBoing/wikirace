<div class="main-container">
  <div class="title-container centered-vertically "><h2><%= t(".forgot_your_password") %></h2></div>
  <div class="content-container centered-vertically">
    <div class="white-container centered-vertically">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(".send_me_reset_password_instructions"), class: "btn-tim main-red" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
