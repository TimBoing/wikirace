<div class="main-container" id="gs-show-main-container">
  <div class="title-container centered-vertically"><h1>Vous avez oubliÃ© votre mot de passe?</h1></div>
  <div class="content-container centered-vertically">
    <div class="white-container centered-vertically">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Changer", class:"btn-tim main-red" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
